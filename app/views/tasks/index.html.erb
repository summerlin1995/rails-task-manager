<h1> My Task </h1>

<% @tasks.each do |task| %>
  <p><%= link_to task.title, task_path(task.id) %></p>
  <%= link_to task_path(task.id), data: { confirm: "Are you sure?" }, method: :delete do%>
    <i class="fa fa-trash"></i>
    <% end %>
  <% if task.completed == true %>
    <i class="far fa-check-square"></i>
  <% else %>
    <i class="far fa-square"></i>
  <% end %>
<% end %>

<p><%= link_to "Add new task", new_task_path %></p>
